<body class = "login_body">
    <div class="login-page">
        <div class="form_login">
            <%= form_tag(users_path, method: "post", html: {class: "register-form"}) do %>
                <%= text_field_tag "name",nil, placeholder: 'Name'%> <br>
                <%= text_field_tag "email",nil, placeholder: 'Email' %> <br>
                <%= password_field_tag "password",nil, placeholder: 'Password' %> <br>
                
                <%= submit_tag  "JOIN", :class => 'actions' %>
            <% end %>
        <p class="message">Already registered? <a href="/users/new">Sign In</a></p>
        </div>        
    </div>
</body>
